<!DOCTYPE  html>
<html>
<head>
    <meta  charset="UTF-8">
    <title>{%  block title  %}GMAO{%  endblock %}</title>
    {%  block stylesheets  %}
         <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/style.css') }}">
    {%  endblock %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body> 
    <div class="background-bold">
        <nav class="navbar navbar-expand-lg navbar-dark background-bold">
            <div class="container-fluid">
                <a class="navbar-brand" id="titlenav" href="#">GMAO</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon bg-warning"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-5 ps-5">
                        <li class="nav-item pt-1">
                            <a class="nav-link active brown" aria-current="page" href="{{ path('machine') }}"> <span class="brown"> Parc Machine</span></a>
                        </li>
                        <li class="nav-item pt-1">
                            <a class="nav-link active brown" aria-current="page" href="{{ path('listage') }}"><span class="brown">Listage complet</span></a>
                        </li>
                        <li class="nav-item pt-1">
                            <a class="nav-link active brown" aria-current="page" href="{{ path('search') }}"><span class="brown">Filtrage</span></a>
                        </li>
                        <li class="nav-item pt-1">
                            <a class="nav-link active brown" aria-current="page" href="{{ path('courbe') }}" target="_blank"><span class="brown">Histogramme</span></a>
                        </li>
                        <li class="nav-item pt-1">
                            {% if app.user %}
			                    <a class="nav-link brown" href="{{path('machine_add') }}"><span class="brown">Saisie Machine</span></a>
                            {% endif %}
                        </li>  
                        <li class="nav-item pt-1">
                            {% if app.user %}
			                    <a class="nav-link brown" href="{{path('panne_add') }}"><span class="brown">Saisie Intervention</span></a>
                            {% endif %}
                        </li>
                        <li class="nav-item pt-1">
                            {%  if is_granted('ROLE_ADMIN')  %}
                                <a class="nav-link brown" href="{{path('app_register') }}"><span class="brown">Enregistrement</span></a>
                            {% endif %}
                        </li>                                                            
                        <li class="nav-item pt-1">
                            {%  if is_granted('ROLE_ADMIN')  %}
			                    <a class="nav-link brown" href="{{path('admin') }}"><span class="brown">Administrateur</span></a>
                            {% endif %}
                        </li>
                        <li class="nav-item pt-1">
                            {% if app.user %}
			                    <a class="nav-link brown" href="{{path('app_logout') }}"><span class="brown">DÃ©connexion</span></a>
			                {% else %}
			                    <a class="nav-link brown"    href="{{path('login') }}"><span class="brown">Connexion</span></a>
			                {% endif %}
                        </li> 
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="row">
        <div class="col-12"> 
            <div class="d-flex justify-content-start  ms-2">                         
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}                                
                    <strong class="brown">  Utilisateur :</span>    <span class="text-warning">{{ app.user.nom }}</strong>
                {% endif %}
            </div>
       </div>
    </div>


   
    



    {%  block body  %}{%  endblock %}
    {%  block js  %}{%  endblock %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html> 